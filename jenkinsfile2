pipeline {
     agent any
     stages {
         stage('pre-build') {
              steps {
                  echo 'prebuild'
                  }
               }
               
         stage('build') {
              steps {
                  echo 'build'
                  }
               }
               
         stage('unit test') {
              steps {
                  echo 'unit test'
                  }
               }
               
         stage('deploy') {
              steps {
                  echo 'deploy'
                  }
               }   
               
       stage('regression test') {
              
                  parallel{
                   stage('chrome'){
                       steps {
                       echo 'running in chrome'
                       }
                   stage('safari'){
                       steps {
                       echo 'running in safari'
                       }
                   stage('opera'){
                       steps {
                       echo 'running in opera'
                       }
                   }
                      }
                  
               }  
               
        stage('release to prod') {
              steps {
                  echo 'release to prod'
                  }
               }  
           }
      

post {

    always {


        echo 'cleanup after everything'
       }

    
}

}
