pipeline {
     agent any
     stages {
         stage('pre-build') {
              steps {
                  echo 'prebuild'
                  }
               }
               
         stage('build') {
              steps {
                  echo 'build'
                  }
               }
               
         stage('unit test') {
              steps {
                  echo 'unit test'
                  }
               }
               
         stage('deploy') {
              steps {
                  echo 'deploy'
                  }
               }   
               
        stage('regression test') {
              steps {
                  echo 'regression test'
                  }
               }  
               
        stage('release to prod') {
              steps {
                  echo 'release to prod'
                  }
               }  
           }
      

post {

    always {


        echo 'cleanup after everything'
       }

    
}

}
