pipeline {
     agent any
     stages {
         stage('pre-build') {
              stages{
                  stage{
                      steps('inner1'){
                          echo 'this is inner 1'}
                      }
                  }
               }
               }
               
         stage('build') {
              steps {
                  echo 'build'
                  }
               }
               
         stage('unit test') {
              steps {
                  echo 'unit test'
                  }
               }
               
         stage('deploy') {
              steps {
                  echo 'deploy'
                  }
               }   
               
    
      

post {

    always {


        echo 'cleanup after everything'
       }

    
}

}
