pipeline{
    agent any
    environment{
         abc = 'Hello World'
         efg = 'pass'
    }
    
    stages{
    
        stage('one'){
        
            when {
            
                 allOf{
                 environment name: 'efg', value:'pass'
                 environment name: 'abc', value: 'Hello World'
                 beforeInput true
             }
             
            input {
               message" deploy to production?"
               id "simple-input"
            
            }
            }
        
            steps{
                echo 'Value has been passed'
            
            }
        
        
        }
    
    
    
    
    
    }













}
