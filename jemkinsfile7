pipeline{
    agent any
    environment{
         abc = 'Hello World'
         efg = 'pass'
    }
    
    stages{
    
        stage('one'){
        
            when {
            
                 anyof{
                 environment name: 'efg', value:'pass'
                 environment name: 'abc', value: 'Hello Wrld'
             }
            }
        
            steps{
                echo 'Value has been passed'
            
            }
        
        
        }
    
    
    
    
    
    }













}
